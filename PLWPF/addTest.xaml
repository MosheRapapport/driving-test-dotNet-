        xmlns:local="clr-namespace:PLWPF"
        xmlns:BE="clr-namespace:BE;assembly=BE" x:Class="PLWPF.addTest"
        mc:Ignorable="d"
        Title="addTest" Height="450" Width="800" >
    <Grid>

        <Grid x:Name="grid1" VerticalAlignment="Top" Margin="255,72,0,0" HorizontalAlignment="Left" >
