        </Grid>
        <Label Content="Select a date and time" HorizontalAlignment="Left" Height="45" Margin="255,5,0,0" VerticalAlignment="Top" Width="140"/>
        <Button Content="add" HorizontalAlignment="Left" Height="50" Margin="265,145,0,0" VerticalAlignment="Top" Width="130" Click="Button_Click"/>

    </Grid>
</Window>
