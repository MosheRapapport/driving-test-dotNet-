                    <Setter Property="StackPanel.Visibility" Value="Hidden"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=comboBox_days, Path=Text}" Value ="Sunday">
                            <Setter Property="StackPanel.Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>
            <CheckBox x:Name="Sunday_c9" Content="  9:00-10:00" IsChecked="{ Binding Luz.data[0][0], Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
